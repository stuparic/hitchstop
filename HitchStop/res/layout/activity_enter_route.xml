<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@drawable/black_bgd"    android:foreground="@color/white"    android:orientation="vertical" >    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="20dp"        android:orientation="horizontal" >        <TextView            android:id="@+id/er_title"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_gravity="center_vertical|center_horizontal"            android:gravity="center_vertical|center_horizontal"            android:text="@string/er_title"            android:textColor="@color/white"            android:textSize="30sp" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="20dp"        android:orientation="horizontal" >        <EditText            android:id="@+id/er_startLocation"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:ems="10"            android:hint="@string/erStartLocation" />        <Button            android:id="@+id/er_startLocationMap"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="@string/er_startLocationBtn" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="20dp" >        <EditText            android:id="@+id/er_endLocation"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:ems="10"            android:hint="@string/er_endLocation" />        <Button            android:id="@+id/er_endLoactionMap"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="@string/er_startLocationBtn" />    </LinearLayout>    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="20dp" >        <EditText            android:id="@+id/er_startDate"            android:layout_width="210dp"            android:layout_height="wrap_content"            android:hint="@string/er_startDateTx"            android:inputType="date" />    </LinearLayout>    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="20dp" >        <EditText            android:id="@+id/er_startTime"            android:layout_width="210dp"            android:layout_height="wrap_content"            android:hint="@string/er_startTimeTx"            android:inputType="time" />    </LinearLayout>    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="30dp">        <RadioGroup            android:id="@+id/radioGroup1"            android:layout_width="wrap_content"            android:layout_height="60dp"            android:contentDescription="@string/er_driverTravelerRbg"            android:orientation="vertical" >            <RadioButton                android:id="@+id/radio0"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:checked="true"                android:text="@string/er_iAmDriver" />            <RadioButton                android:id="@+id/radio1"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:contentDescription="@string/er_driverTravelerRbg"                android:text="@string/er_iAmTraveler" />        </RadioGroup>    </LinearLayout>        <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="20dp"        android:gravity="bottom" >        <Button            android:id="@+id/er_nextBtn"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:text="@string/er_continueBtn" >                    </Button>    </LinearLayout></LinearLayout>